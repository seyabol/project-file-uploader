<!-- views\auth\forgotPassword.ejs -->

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: title || 'Forgot Password', pageCss: 'auth' }) %>

  <body class="bg-gray-50 min-h-screen flex flex-col auth-page forgot-password-page">
    <%- include('../partials/header', { user: null }) %>

    <main class="flex-grow flex justify-center items-center px-4 py-12">
      <div class="w-full max-w-md bg-white rounded-lg shadow p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">
          Forgot Password
        </h1>

        <% if (error) { %>
          <%- include('../partials/errors', { message: error }) %>
        <% } %>

        <% if (success) { %>
          <%- include('../partials/success', { message: success }) %>
        <% } %>

        <form
          action="/auth/forgot-password"
          method="post"
          class="space-y-5"
        >
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition font-medium"
          >
            Send Reset Link
          </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
          <a
            href="/auth/login"
            class="text-blue-600 hover:text-blue-700 font-medium transition"
          >
            ‚Üê Back to Login
          </a>
        </p>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
