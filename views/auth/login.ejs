<!-- views/login.ejs -->

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: 'Login', pageCss: 'auth' }) %>

  <body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('../partials/header', { user: user }) %>

    <main class="flex-grow container mx-auto px-4 py-12 flex justify-center">
      <div class="bg-white shadow rounded-lg w-full max-w-md p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center flex items-center justify-center gap-2">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
          Sign In
        </h1>

        <% if (error) { %>
          <%- include('../partials/errors', { message: error }) %>
        <% } %>

        <% if (success) { %>
          <%- include('../partials/success', { message: success }) %>
        <% } %>

        <form action="/auth/login" method="POST" class="space-y-6">
          <div>
            <label for="username" class="block text-sm font-medium text-gray-700 mb-1">
              Username
            </label>
            <input
              type="text"
              id="username"
              name="username"
              class="block w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
              required
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              class="block w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
              required
            />
          </div>

          <p class="text-right text-sm">
            <a href="/auth/forgot-password" class="text-blue-600 hover:underline transition">
              Forgot your password?
            </a>
          </p>

          <button
            type="submit"
            class="w-full inline-flex justify-center items-center px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded hover:bg-blue-700 transition"
          >
            Login
          </button>
        </form>

        <p class="mt-6 text-center text-gray-600 text-sm">
          Donâ€™t have an account?
          <a href="/auth/register" class="text-blue-600 hover:underline transition">
            Register here
          </a>
        </p>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
